[Unit]
Description=FabScanPi Server
Wants=avahi-daemon.service
After=network.target avahi-daemon.service

[Service]
EnvironmentFile=-/etc/default/fabscanpi-server
ExecStart=/usr/bin/fabscanpi-server $DAEMON_ARGS
User=fabscan
Group=fabscan
# very noisy on stdout
StandardOutput=null
Restart=on-failure

[Install]
WantedBy=multi-user.target